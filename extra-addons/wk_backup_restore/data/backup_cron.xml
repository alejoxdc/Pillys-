<odoo>
    <data noupdate="1">
        <!-- Cron job for automatic backup every 8 hours -->
        <record id="ir_cron_backup_process_auto" model="ir.cron">
            <field name="name">Automatic Database Backup Every 8 Hours</field>
            <field name="model_id" ref="model_backup_process"/>
            <field name="state">code</field>
            <field name="code">model.run_automatic_backup()</field>
            <field name="interval_number">8</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>