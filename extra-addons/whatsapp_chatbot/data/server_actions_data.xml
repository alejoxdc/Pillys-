<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Server action to handle incoming messages -->
        <record id="action_handle_incoming_messages" model="ir.actions.server">
            <field name="name">Handle Incoming Messages</field>
            <field name="model_id" ref="model_chatbot"/>
            <field name="state">code</field>
            <field name="code">
                """
                record.handle_incoming_messages()
                """
            </field>
        </record>

        <!-- Server action to handle message updates -->
        <record id="action_handle_message_updates" model="ir.actions.server">
            <field name="name">Handle Message Updates</field>
            <field name="model_id" ref="model_chatbot"/>
            <field name="state">code</field>
            <field name="code">
                """
                record.handle_message_updates()
                """
            </field>
        </record>

        <!-- Server action to send response -->
        <record id="action_send_response" model="ir.actions.server">
            <field name="name">Send Response</field>
            <field name="model_id" ref="model_chatbot"/>
            <field name="state">code</field>
            <field name="code">
                """
                record.send_response()
                """
            </field>
        </record>
    </data>
</odoo>