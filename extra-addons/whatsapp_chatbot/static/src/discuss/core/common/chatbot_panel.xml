<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="discuss.ChatbotPanel">
        <ActionPanel title="title">
            <div>
                <div class="mt-3 mb-3">
                    <t t-if="!state.attentionState">
                        <button class="btn btn-success btn-lg w-100" type="button" t-on-click="() => this.updateAttentionState()">
                    Atender
                        </button>
                    </t>
                    <t t-else="">
                        <button class="btn btn-danger btn-lg w-100" type="button" t-on-click="() => this.updateAttentionState()">
                    Finalizar
                        </button>
                        <button class="btn btn-warning btn-lg w-100 mt-4" type="button" t-on-click="() => this.setConversationFree()">
                    Liberar
                        </button>
                    </t>
                </div>

                <div class="form-check form-switch">
                    <label class="form-check-label">
                        <input t-on-change="updateActivateBot" class="form-check-input" type="checkbox" role="switch" t-att-checked="state.activateBot"/>
                        <t t-if="state.activateBot">Bot activo</t>
                        <t t-else="">Bot inactivo</t>
                    </label>
                </div>
                <hr/>
                <div class="contact-info" style="padding: 10px; background-color: #f8f9fa; border-radius: 5px;">
                    <a t-attf-href="/web#id={{props.thread.whatsapp_partner_id}}&amp;model=res.partner" style="text-decoration: none; color: #28a745">
                        <i class="fa fa-user" style="margin-right: 5px;"></i>Ir al contacto
                    </a>
                </div>
                <div class="crm-info" style="padding: 10px; background-color: #f8f9fa; border-radius: 5px;">
                    <spam t-on-click="openLeadPopup" style="text-decoration: none; color: #28a745; cursor: pointer;">
                        <i class="fa fa-money" style="margin-right: 5px;"></i>Ir a la oportunidad
                    </spam>
                </div>
                <!-- <t t-else="">
                    <div class="crm-info" style="padding: 10px; background-color: #f8f9fa; border-radius: 5px;">
                        Este cliente no tiene una oportunidad asociada.
                    </div>
                </t> -->

                <hr/>
                <t t-if="state.attentionState">
                    <h4>Delegar</h4>
                    <div name="delegate">
                        <select class="form-select" t-on-change="updateChoosenMember" t-att-value="state.choosenMember">
                            <option value="0">Selecciona un miembro</option>
                            <option t-foreach="state.members" t-as="member" t-key="member.id" t-att-value="member.id">
                                <t t-esc="member.name"/>
                            </option>
                        </select>
                        <button class="btn btn-primary btn-lg w-100 mt-2" type="button" t-on-click="() => this.delegateChannel()">
                    Delegar
                        </button>
                    </div>

                    <hr/>

                    <h4>Etiquetas de cliente</h4>
                    <div name="tag_ids" class="o_field_widget o_field_many2many_tags">
                        <div class="d-flex flex-wrap gap-1">
                            <t t-foreach="props.thread.partner_category_id" t-as="cat" t-key="cat.id">
                                <span t-attf-class="o_tag position-relative d-inline-flex align-items-center user-select-none mw-100 o_badge badge rounded-pill lh-1 o_tag_color_{{cat.color}}" tabindex="-1" t-attf-data-color="{{cat.color}}" t-attf-title="{{cat.name}}">
                                    <div class="o_tag_badge_text text-truncate">
                                        <t t-esc="cat.name"/>
                                    </div>
                                </span>
                            </t>
                        </div>
                    </div>
                    <!-- <t t-if="props.thread.current_opportunity_id">
                        <hr/>
                        <h4>Opportunity stage</h4>
                        <div class="o_oppportunity_stage_section">
                            <select class="form-select" t-on-change="updateOpportunityStage" t-att-value="state.opportunityStage">
                                <option value="0">Select a stage</option>
                                <option t-foreach="state.opportunityStages" t-as="stage" t-key="stage.id" t-att-value="stage.id" t-att-selected="state.opportunityStage == stage.id">
                                    <t t-esc="stage.name"/>
                                </option>
                            </select>
                        </div>
                    </t> -->
                    <hr/>
                    <h4>Respuetas r√°pidas</h4>
                    <div class="o_quick_response_section">
                        <input class="o-discuss-ChannelInvitation-search border form-control" t-ref="inputQuick" placeholder="Type the name of a quick response" t-on-input="onInputQuick"/>
                        <div class="d-flex flex-column mx-0 py-2 overflow-scroll quick-response-Container">
                            <t t-foreach="state.quickResponses" t-as="quickResponse" t-key="quickResponse.id">
                                <div class="o-discuss-ChannelInvitation-selectable o_object_fit_cover d-flex align-items-center px-3 py-1 btn">
                                    <t name="sendableTemplateDetail">
                                        <span class="flex-grow-1 mx-2 text-truncate text-start fs-6" t-attf-title="{{quickResponse.body}}">
                                            <t t-esc="quickResponse.name"/>
                                        </span>
                                    </t>
                                    <button class="o-mail-Composer-send btn o-last rounded-0 rounded-end-3 btn-link align-self-stretch border-start-0 ms-2 me-3" aria-label="Enviar" t-on-click="() => this.onClickPasteQuickResponse(quickResponse)">Enviar</button>
                                </div>
                            </t>
                        </div>
                    </div>
                    <hr/>
                    <h4>Plantillas de whatsapp</h4>
                    <div class="o_whatsapp_template_section">
                        <input class="o-discuss-ChannelInvitation-search border form-control" t-ref="input" placeholder="Type the name of a template" t-on-input="onInput"/>
                        <div class="d-flex flex-column mx-0 py-2 overflow-auto">
                            <t t-foreach="state.sendableTemplates" t-as="sendableTemplate" t-key="sendableTemplate.id">
                                <div class="o-discuss-ChannelInvitation-selectable o_object_fit_cover d-flex align-items-center px-3 py-1 btn">
                                    <t name="sendableTemplateDetail">
                                        <span class="flex-grow-1 mx-2 text-truncate text-start fs-6" t-attf-title="{{sendableTemplate.body}}">
                                            <t t-esc="sendableTemplate.name"/>
                                        </span>
                                    </t>
                                    <button class="o-mail-Composer-send btn o-last rounded-0 rounded-end-3 btn-link align-self-stretch border-start-0 ms-2 me-3" aria-label="Enviar" t-on-click="() => this.onClickSendTemplate(sendableTemplate)">Enviar</button>
                                </div>
                            </t>
                        </div>
                    </div>
                </t>
            </div>
        </ActionPanel>
    </t>
</templates>